<!doctype html>
<html lang="en">

{{> head}}

<body>

  <div class=wrapper>
     {{> header}}

    <ul class="menu-bar">
      <li class="menu-opt"><a href="/">Home</a></li>
      <li class="menu-opt"><a href="/users">Users</a></li>
      <li class="menu-opt"><a class=active href="/tracks">Tracks</a></li>
      <li class="menu-opt"><a href="/about">About</a></li>
    </ul>

    <div id="page-content">
      <div class="center vis-text">
        <h1>Tracks</h1>
      </div>

      <div class="center">
      <form action="/tracks/new" method="POST" enctype="multipart/form-data">
        Author:<br>
        <input type="text" name="author"><br>
        Name:<br>
        <input type="text" name="name"><br>
        Album:<br>
        <input type="text" name="album"><br>
        Year:<br>
        <input type="number" name="year"><br>
        Select track:<br>
        <input type="file" name="track"><br>
        Select track image:<br>
        <input type="file" name="image"><br>
        <input type="submit" value="Submit">
      </form>
      </div>


    </div>

  {{ >footer }}

  </div>
</body>

</html>