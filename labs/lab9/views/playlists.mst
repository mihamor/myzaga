<!DOCTYPE html>
<html lang="en">

 {{>head}}
  <body id="page-top">

    {{>nav-bar}}

    <header class="bg-blue text-white">
      <div class="container text-center">
        <h1>Playlists {{#user_search}}for user {{user_search.login}}{{/user_search}}</h1>
        {{#user_search}}<input type="hidden" value="{{user_search._id}}" id="user_search"></input>{{/user_search}}
      </div>
    </header>
    <div id="page-content">
     <section class="track-list-container bg-gray">
      <div class="container text-center">


        <div class="row">
         <div class="col-lg-8 mx-auto">
                <input  style="width:85%;" type="search" id="search_field" name="search" placeholder="Search user..." >
                 <div id="search_info">
                 Seacth results for:<span id="search_info_str"></span>
                <button id="clear_filter"class="close float-none" aria-label="Erase search" type="button" ><span aria-hidden="true">&times;</span></button>
                </div>
         </div>
         </div>



        <div id="playlists_list">
        Loading...
        </div>

        <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="page_refs">
                 <div id="page_info"></div>
            </div>
                <button type ="button"  id="prev_page" class='btn btn-primary'>&laquo; Previous page</button>
                <button type ="button" id="next_page"  class='btn btn-primary'>&raquo; Next page</button>
            <div  id='no_playlists' class = "center vis-text">No playlists were found.</div>
            <a class ="btn btn-primary float-right" href="/playlists/new">Add new playlists</a>
        </div>    
      </div>
      </div>
    </section>
    </div>
    <script src="/javascripts/playlistui.js"></script>
    <script src="/javascripts/playlists.js"></script>

    {{>footer}}

  </body>

</html>
