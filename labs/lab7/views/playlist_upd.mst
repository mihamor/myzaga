<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>MyZaGa</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/stylesheets//scrolling-nav.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="/stylesheets/multi-select.css">
    <script src="/javascripts/jquery.min.js"></script>
            <!-- Bootstrap JavaScript -->
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/jquery.multi-select.js"></script>
    <script type="text/javascript">
        // run pre selected options
        $('#tracks').multiSelect();
    </script>


  </head>

  <body id="page-top">

    {{>nav-bar}}

    <header class="bg-blue text-white">
      <div class="container text-center">
        <h1>Create new playlist</h1>
      </div>
    </header>

    <section class="bg-gray">
      <div class="container">
      <div class="col-lg-12 mx-auto bg-light border rounded" style="padding: 20px;">
      <form action="/playlists/{{playlist._id}}/update" method="POST">
        <div class="form-group">
            <label for="desc">Short description:</label>
            <input type="text" class="form-control" id="desc" value="{{playlist.desc}}" name="desc" required>
        </div>
        <div class="form-group">
            <label for="tracks">Tracks:</label>
          <select name="tracks[]" id="tracks" multiple="multiple">
            {{#selected}}
                <option selected="selected" value="{{_id}}">{{author}} - {{name}}</option>
            {{/selected}}
            {{#not_selected}}
                <option value="{{_id}}">{{author}} - {{name}}</option>
            {{/not_selected}}
            </select>
        </div>
            <button type="submit" class="btn btn-primary center">Submit</button>
        </form>
      </div>
      </div>
    </section>


    {{>footer}}

    <script src="/javascripts/jquery.min.js"></script>
            <!-- Bootstrap JavaScript -->
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/jquery.multi-select.js"></script>
    <script type="text/javascript">
        // run pre selected options
        $('#tracks').multiSelect();
    </script>

  </body>

</html>
