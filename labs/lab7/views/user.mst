<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>MyZaGa</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/stylesheets//scrolling-nav.css" rel="stylesheet">

  </head>

  <body id="page-top">

    {{>nav-bar}}

    <header class="bg-blue text-white">
      <div class="container text-center">
      <img class="rounded-circle inline-block user-img" src="{{currUser.avaUrl}}"></img>
        <b class="bg-dark rounded" style="font-size: 32px; padding: 8px;">{{currUser.login}}</b>
      </div>
    </header>

    <section>
      <div class="container">
        <div class="row">
          <div class="col-lg-12 mx-auto bg-gray rounded" style="padding: 50px;">
                <p><b>Fullname: </b>{{currUser.fullname}}</p>
                <p><b>Registration data:</b>{{currUser.registeredAt}}</p>
                <p><b>Bio: </b>{{currUser.bio}}</p>
            <hr>
            <div class="text-center">
             <a class="btn btn-primary" href="/playlists/{{currUser.uploaded_tracks}}">Uploaded tracks</a>
            <a class="btn btn-primary" href="/playlists?user={{currUser._id}}">{{currUser.login}}`s playlists</a>
            {{#isOwner}}
            <a class="btn btn-primary" href="/users/{{currUser._id}}/update">Update user</a>
            {{/isOwner}}
            </div>
          </div>
        </div>
      </div>
    </section>

    {{>footer}}

  </body>

</html>
