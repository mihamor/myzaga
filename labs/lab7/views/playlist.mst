<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>MyZaGa</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/stylesheets//scrolling-nav.css" rel="stylesheet">

  </head>

  <body id="page-top">

    {{>nav-bar}}

    <header class="bg-blue text-white">
      <div class="container text-center">
        <h1>Playlist</h1>
        <p class="lead">description: {{playlist.desc}}</p>
        <p class="lead">uploaded by: <a class="btn btn-light" href="/users/{{userRef._id}}">{{playlist.userRef.login}}</a></p>
      </div>
    </header>

    <section class="track-list-container bg-light">
      <div class="container text-center">
        <div class="col-lg-12 mx-auto">

            {{#playlist.tracks.length}}
                <div class="list-group track-list rounded" style="width:100%;">
                <!--track-list-container -->
                    {{#playlist.tracks}}
                    <a  class ="list-group-item list-group-item-action track-ref" href="/tracks/{{_id}}"><span class="text-primary">{{author}}</span> - {{name}}</a>
                    {{/playlist.tracks}}
                </div>
            {{/playlist.tracks.length}}

            {{^playlist.tracks.length}}
            <div class = "center vis-text">This playlist is empty.</div>
            {{/playlist.tracks.length}}
             {{^playlist.isUserUploads}}
             {{#isOwner}}
                <form>
                    <a class ="btn btn-primary float-left" href="/playlists/{{playlist._id}}/update">Update</a>
                    <button class ="btn btn-primary float-right" formmethod="post">
                            Delete
                    </button>
                </form>
              {{/isOwner}}
              {{/playlist.isUserUploads}}
        </div>
        </div>
      </div>
    </section>

    {{>footer}}

  </body>

</html>
