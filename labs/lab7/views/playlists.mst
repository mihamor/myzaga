<!DOCTYPE html>
<html lang="en">

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>MyZaGa</title>

    <!-- Bootstrap core CSS -->
    <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/stylesheets//scrolling-nav.css" rel="stylesheet">

  </head>

  <body id="page-top">

    {{>nav-bar}}

    <header class="bg-blue text-white">
      <div class="container text-center">
        <h1>Playlists</h1>
      </div>
    </header>

    <section class="track-list-container bg-gray">
      <div class="container text-center">
        <div class="col-lg-12 mx-auto bg-light border rounded">

        {{#playlists.length}}
         <div>
            <ul class="list-group">
        {{#playlists}}
                <a class="list-group-item d-flex justify-content-between align-items-center list-group-item-action list-group-item-secondary"  style="margin: 20px 0;" href="/playlists/{{_id}}">
                <!--<li class="list-group-item d-flex justify-content-between align-items-center" style="margin: 20px;">-->
                   {{desc}}

                    <span class="badge badge-primary badge-pill">{{tracks.length}}</span>
                <!--</li>-->
                </a>
         {{/playlists}}
            </ul>
        </div>

        {{/playlists.length}}

        {{^playlists.length}}
        <div class = "center vis-text">No playlists were found.</div>
        {{/playlists.length}}


        <a class ="btn btn-primary float-right" style="margin-top:20px;" href="/playlists/new">Add new playlists</a>
        </div>    
      </div>
    </section>

    {{>footer}}

  </body>

</html>
