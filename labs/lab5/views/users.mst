<!doctype html>
<html lang="en">

{{> head}}


<body>
  <div class=wrapper>

  {{> header}}

  <ul class="menu-bar">
    <li class="menu-opt"><a href="/">Home</a></li>
    <li class="menu-opt"><a class="active" href="/users">Users</a></li>
    <li class="menu-opt"><a href="/playlists">Playlists</a></li>
    <li class="menu-opt"><a href="/tracks">Tracks</a></li>
    <li class="menu-opt"><a href="/about">About</a></li>
  </ul>

  <div id="page-content">
    <div class="center vis-text">
        <h1>Users</h1>
    </div>
    {{#users.length}}
    <!-- user-table -->
    <div class="vis-text user-table">
      <div class=user-link-container>
        <table class ="table table-condensed">
          <tr>
            <th>Login</th>
            <th>Fullname</th>
            <th>Registered</th>
          </tr>
          {{#users}}
          <tr>
            <td><a href="/users/{{id}}">{{login}}</a> <span class="user-status online">online</span></td>
            <td>{{fullname}}</td>
            <td>{{registeredAt}}</td>
          </tr>
          {{/users}}
        </table>
      </div>
    </div>
    {{/users.length}}

    {{^users.length}}
      <div class = "center vis-text">No users were found.</div>
    {{/users.length}}


  </div>
  {{ >footer }}
</body>

</html>