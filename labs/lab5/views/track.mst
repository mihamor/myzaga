<!doctype html>
<html lang="en">

{{> head}}

<body>

  <div class=wrapper>
     {{> header}}

    <ul class="menu-bar">
      <li class="menu-opt"><a href="/">Home</a></li>
      <li class="menu-opt"><a href="/users">Users</a></li>
      <li class="menu-opt"><a href="/playlists">Playlists</a></li>
      <li class="menu-opt"><a class=active href="/tracks">Tracks</a></li>
      <li class="menu-opt"><a href="/about">About</a></li>
    </ul>

    <div id="page-content">
      <div class="vis-text track-info">
        <img src="{{trackImage}}">
        <div class="track-name">{{name}}</div>
        <div class="track-desc">by {{author}}</div>
        <div class="track-desc">year: {{year}}</div>
        <div class="track-desc">album: {{album}}</div>
        <div class="track-desc">
          Uploaded by: 
          <a class=action-button href="/playlists/{{uploadedListRef._id}}">
            {{uploadedListRef.userRef.login}}
          </a>
        </div>
        <audio controls>
          <source src="{{location}}" type="audio/mpeg"> Your browser does not support the audio element.
        </audio>
      </div>
      <form>
          <a class="action-button" href="/tracks/{{id}}/update">Update</a>
          <button class ="action-button right" formmethod="post">
            Delete
          </button>
        </form>
    </div>

  {{ >footer }}

  </div>
</body>

</html>